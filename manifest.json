{
  "manifest_version": 3,
  "name": "Custom theme MyDTU",
  "version": "1.0",
  "description": "Custom theme for MyDTU",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://mydtu.duytan.edu.vn/*",
    "https://mydtu.duytan.edu.vn/*"
  ],
  "content_scripts": [],
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "action": {},
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src 'self' 'unsafe-inline' https://mydtu.duytan.edu.vn/;"
  }
}
